---
const { hrefButton, service, details, price = '', button } = Astro.props
import Button from './Button.astro'
---

<div
	class="grid h-[400px] w-96 grid-cols-1 grid-rows-4 rounded-lg bg-lightGreen p-12 leading-6 shadow-lg"
>
	<h1 class="text-2xl font-bold">{service}</h1>
	<p class="row-span-2 text-lg">{details}</p>
	<a target="_blank" class="mx-auto w-fit" no-referrer href={hrefButton}>
		<Button>{button}</Button>
	</a>
</div>

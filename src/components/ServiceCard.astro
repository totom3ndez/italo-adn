---
const { hrefButton = '#', service, details, price = '', button } = Astro.props
import Button from './Button.astro'
---

<div class="m-auto flex max-w-72 flex-col gap-3 rounded-lg bg-lightGreen p-12 shadow-lg">
	<h3 class="text-xl text-darkRed">{service}</h3>
	<p class="text-sm">{details}</p>
	<span>{price}</span>
	<a target="_blank" no-referrer href={hrefButton}>
		<Button>{button}</Button>
	</a>
</div>

---
import Mail from '../components/icons/mail.astro'
import Coffee from '../components/icons/coffee.astro'
const linkStyle = 'md:hover:text-lightRed text-white uppercase text-xs md:text-md'
const colStyle = 'blog-links flex flex-col gap-4'
---

<div
	id="footer"
	class="items-top hidden md:flex justify-center gap-4 px-56 py-20 text-sm md:mx-auto md:flex-row md:justify-around"
>
	<div class={colStyle}>
		<a class={linkStyle} href="/blog/paso-a-paso">Ciudadanía italiana</a>
		<a class={linkStyle} href="/blog/fijar-residencia">Residencia en Italia</a>
		<a class={linkStyle} href="/blog/codice-fiscale">Codice fiscale</a>
		<a class={linkStyle} href="/blog/declaracion-de-presencia">Declaración de presencia</a>
		<a class={linkStyle} href="/blog/carta-identidad">Carta de identidad</a>
		<a class={linkStyle} href="/blog/obtener-pasaporte-italiano">Pasaporte</a>
	</div>
	<div class={colStyle}>
		<a class={linkStyle} href="/about">Quiénes somos</a>
		<a class={linkStyle} href="/servicios">Servicios</a>
		<a class={linkStyle} href="/#contact">Contacto</a>
		<a
			aria-label="Botón para aportar a nuestra pagina web "
			href="https://cafecito.app/totomendez"
			rel="noopener"
			target="_blank"
			class="flex gap-2 text-white"
		>
		<span class="hidden md:block">Invítanos un Cafecito</span>
		<Coffee />
		</a>
		<a
			aria-label="Botón para enviarnos un email"
			href="mailto:info@italoadn.com"
			class="flex gap-2 text-white"
		>
		<span class="hidden md:block">info@italoadn.com</span>
		<Mail />
		</a>
	</div>
</div>
---
const inputStyle =
	'rounded-lg w-full placeholder:italic placeholder:opacity-50 rounded-md border border-lightGreen bg-white py-2 my-2 px-4 text-base font-medium text-black outline-none focus:border-lightRed focus:shadow-md'
---

<div class="container mx-auto pt-40">
	<h2 class="text-center text-lg font-bold">Formulario para el pedido de Actas</h2>
	<form class="mx-auto mb-4 flex w-full max-w-lg flex-wrap rounded px-8 pb-8 pt-6 shadow-md">
		<fieldset>
			<legend>Tus datos:</legend>
			<label for="firstName">Nombre</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="firstName"
				id="firstName"
				placeholder="Jose"
				required
				aria-label="Campo de formulario para Nombre"
			/>
			<label for="lastName">Apellido</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="lastName"
				id="lastName"
				placeholder="Ancellotti"
				required
				aria-label="Campo de formulario para Apellido"
			/>
			<label for="email">Email</label>
			<input
				class:list={[inputStyle]}
				type="email"
				name="email"
				id="email"
				aria-label="Campo de formulario para Email"
				placeholder="ejemplo@gmail.com"
				required
			/>
			<label for="dob">Tu fecha de nacimiento</label>
			<input
				class:list={[inputStyle]}
				type="date"
				name="dob"
				id="dob"
				aria-label="Campo de formulario para Fecha de nacimiento"
				required
			/>
		</fieldset>
		<fieldset>
			<legend>Datos de la partida:</legend>
			<label for="nameAvo">Nombres del AVO</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="nameAvo"
				id="nameAvo"
				placeholder="Giuseppe"
				required
			/>
			<label for="lastAvo">Apellidos del AVO</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="lastAvo"
				id="lastAvo"
				placeholder="Ancellotti"
				required
			/>
			<label for="dobAvo">Fecha de nacimiento del AVO</label>
			<input
				class:list={[inputStyle]}
				type="date"
				name="dobAvo"
				id="dobAvo"
				aria-label="Campo de formulario para Fecha de nacimiento del AVO"
				required
			/>
			<label for="placeAvo">Lugar de nacimiento del AVO</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="placeAvo"
				id="placeAvo"
				placeholder="Siracusa, Italia"
				required
			/>
			<label for="parentsAvo">Nombres de los padres</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="parentsAvo"
				id="parentsAvo"
				placeholder="Giuseppe Ancellotti y Maria Catanzaro"
				required
			/>
			<label for="infoAvo">Informaci√≥n extra del AVO</label>
			<textarea
				class:list={[inputStyle, 'resize-none']}
				name="infoAvo"
				id="infoAvo"
				placeholder="Hermanos, hijos, familiares cercanos, lugares de eventos.."></textarea>
		</fieldset>
		<fieldset>
			<legend>Matrimonio del AVO</legend>
			<input type="checkbox" name="needMarriage" id="needMarriage" />
			<label for="needMarriage">Necesito el acta de matrimonio.</label><br />
			<small class="text-orange-500">Si no lo necesitas, <b>no</b> completar los datos.</small><br
			/>
			<label for="comune">Comuna del matrimonio</label>
			<input
				class:list={[inputStyle]}
				type="text"
				name="comune"
				id="comune"
				placeholder="comuna de Siracusa"
			/>
			<label for="dateMarriage">Fecha de matrimonio</label>
			<input class:list={[inputStyle]} type="date" name="dateMarriage" id="dateMarriage" />
			<label for="couple">Nombre del conyuge</label>
			<input class:list={[inputStyle]} type="text" name="couple" id="couple" placeholder="Maria" />
		</fieldset>
		<button class:list={[inputStyle, 'hover:bg-darkGreen hover:text-white']} type="submit"
			>CONSULTAR</button
		>
	</form>
</div>

<style>
	fieldset {
		border: 1px solid black;
		padding: 20px;
		width: 100%;
	}
</style>

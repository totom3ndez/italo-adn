---
import Layout from '../../layouts/Layout.astro'
import Button from '../../components/Button.astro'
const posts = await Astro.glob('./*.mdx')
---

<Layout title="Blog - Italo ADN">
	<section
		id="blog"
		class="flex min-h-screen w-screen items-center justify-center bg-slate-100 px-10 py-40"
	>
		<div
			id="blogs_container"
			class="grid max-w-6xl grid-cols-1 gap-x-4 gap-y-6 md:grid-cols-2 xl:grid-cols-4"
		>
			{
				posts.map((post) => (
					<div
						id="blog_card"
						class="min-h-96 p-3 relative mt-4 max-w-72 justify-center rounded-lg bg-lightGreen transition-all"
					>
						<img
							width={1}
							height={1}
							src={post.frontmatter.image.url}
							alt={post.frontmatter.image.alt}
							class="mb-5 h-[150px] w-[305px] mt-0"
						/>
						<h4 class="text-lg font-semibold">{post.frontmatter.postTitle}</h4>
						<p class="text-sm">{post.frontmatter.description}</p>
						<div class="text-center">
							<a
								class="text-md absolute bottom-3 right-4 w-fit"
								href={post.frontmatter.postUrl}
							>
								<Button>Visitar post</Button>
							</a>
						</div>
					</div>
				))
			}
		</div>
	</section>
</Layout>

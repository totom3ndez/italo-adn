---
import Layout from '../../layouts/Layout.astro'
import Button from '../../components/Button.astro'
import { Image } from 'astro:assets'
const posts = await Astro.glob('./*.mdx')
---

<Layout title="Blog - Italo ADN">
	<section
		id="blog"
		class="flex min-h-screen w-screen items-center justify-center bg-white px-10 py-40"
	>
		<div
			id="blogs_container"
			class="grid max-w-6xl grid-cols-1 gap-x-4 gap-y-6 md:grid-cols-2 xl:grid-cols-4"
		>
			{
				posts.map((post) => (
					<div class="relative mt-4 flex flex-col items-start gap-4  rounded-lg bg-lightGreen object-cover p-4">
						<Image
							width={1}
							height={1}
							src={post.frontmatter.image.url}
							alt={post.frontmatter.image.alt}
							class="h-[150px] w-[400px]"
						/>
						<h4 class="text-xl font-semibold">{post.frontmatter.postTitle}</h4>
						<p class="text-sm">{post.frontmatter.description}</p>
						<div class="text-center">
							<a class="text-md absolute -bottom-7 left-5 w-fit" href={post.frontmatter.postUrl}>
								<Button>Visitar post</Button>
							</a>
						</div>
					</div>
				))
			}
		</div>
	</section>
</Layout>


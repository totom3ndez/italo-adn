---
const { postTitle, image, author, pubDate, postUrl } = Astro.props.frontmatter || Astro.props
import { Image } from 'astro:assets'
import Navbar from '@/components/Navbar.astro'
import ViewTransitions from 'astro/components/ViewTransitions.astro'
import Copyright from '@/sections/Copyright.astro'
import Cafecito from '@/components/Cafecito.astro'
import '@/styles/global.css'
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="theme-color" media="(prefers-color-scheme: light)" content="white" />
		<meta name="theme-color" media="(prefers-color-scheme: dark)" content="black" />
		<meta name="theme-color" content="#5c6e6c" />
		<meta name="description" content="Blog de ciudadanÃ­a Italiana" />
		<meta name="viewport" content="width=device-width" initial-scale="1.0" />
		<meta property="og:title" content="Italo ADN" />
		<meta property="og:image" content="../../public/logo.webp" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={`https://italoadn.com${postUrl}`} />
		<link rel="manifest" href="/manifest.json" />
		<link rel="icon" type="image/svg+xml" href="/logo-white.webp" />
		<link rel="preload" href="/src/styles/global.css" as="style" />
		<meta name="generator" content={Astro.generator} />
		<title>{postTitle}</title>
		<ViewTransitions />
	</head>
	<body class="bg-slate-100">
		<Navbar />
		<div class="mx-auto mb-10 w-3/4 pt-40 md:max-w-4xl">
			<div class="mx-auto mb-5 flex w-fit flex-col items-center gap-3">
				<h1 class="text-center text-4xl font-bold">
					{postTitle}
					<span class="text-lg">por {author}</span>
				</h1>
			</div>
			<Image class="mx-auto mb-2" width={500} height={200} src={image.url} alt={image.alt} />
			<p class="mb-10 w-fit rounded-3xl bg-slate-100 p-2 md:mx-auto">
				Escrito el: {pubDate}
			</p>
			<slot />
			<Cafecito />
		</div>
		<Copyright />
		<style is:global>
			body::-webkit-scrollbar {
				display: none; /* Hide scrollbar for Chrome, Safari, and Opera */
			}
		</style>
	</body>
</html>
